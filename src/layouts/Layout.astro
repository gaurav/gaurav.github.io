---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Gaurav Vaidya's website on the world wide web." />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/png" href="/avatar-round.png" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>

